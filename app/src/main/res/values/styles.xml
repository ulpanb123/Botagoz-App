<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextStyle">
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="DefaultTextStyle.TitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DefaultTextStyle.SubtitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_regular</item>
    </style>
    <style name="DefaultTextStyle.QuestionTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/question_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DefaultTextStyle.AnswerTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/answer_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>